{
   "apiVersion": "v1",
   "items": [
      {
         "apiVersion": "v1",
         "kind": "Namespace",
         "metadata": {
            "labels": {
               "pod-security.kubernetes.io/enforce": "restricted",
               "pod-security.kubernetes.io/enforce-version": "latest",
               "pod-security.kubernetes.io/warn": "restricted",
               "pod-security.kubernetes.io/warn-version": "latest"
            },
            "name": "pocketid"
         }
      },
      {
         "apiVersion": "onepassword.com/v1",
         "kind": "OnePasswordItem",
         "metadata": {
            "name": "pocketid-env"
         },
         "spec": {
            "itemPath": "vaults/ygghe4vrf6je7fejk4hbncbhbe/items/ickez4zpicz5myaqeboysf37l4"
         }
      },
      {
         "apiVersion": "networking.k8s.io/v1",
         "kind": "Ingress",
         "metadata": {
            "annotations": {
               "cert-manager.io/cluster-issuer": "letsencrypt-production"
            },
            "name": "id-mhnet-app"
         },
         "spec": {
            "rules": [
               {
                  "host": "id.mhnet.app",
                  "http": {
                     "paths": [
                        {
                           "backend": {
                              "service": {
                                 "name": "pocketid",
                                 "port": {
                                    "name": "http"
                                 }
                              }
                           },
                           "path": "/",
                           "pathType": "Prefix"
                        }
                     ]
                  }
               }
            ],
            "tls": [
               {
                  "hosts": [
                     "id.mhnet.app"
                  ],
                  "secretName": "id-mhnet-app-tls"
               }
            ]
         }
      },
      {
         "apiVersion": "v1",
         "kind": "Service",
         "metadata": {
            "labels": {
               "app": "pocketid"
            },
            "name": "pocketid"
         },
         "spec": {
            "clusterIP": "None",
            "ports": [
               {
                  "name": "http",
                  "port": 80
               }
            ],
            "selector": {
               "app": "pocketid"
            },
            "type": "ClusterIP"
         }
      },
      {
         "apiVersion": "apps/v1",
         "kind": "StatefulSet",
         "metadata": {
            "labels": {
               "app": "pocketid",
               "app.kubernetes.io/component": "pocketid"
            },
            "name": "pocketid"
         },
         "spec": {
            "revisionHistoryLimit": 1,
            "selector": {
               "matchLabels": {
                  "app": "pocketid",
                  "app.kubernetes.io/component": "pocketid"
               }
            },
            "serviceName": "pocketid",
            "template": {
               "metadata": {
                  "labels": {
                     "app": "pocketid",
                     "app.kubernetes.io/component": "pocketid"
                  }
               },
               "spec": {
                  "automountServiceAccountToken": false,
                  "containers": [
                     {
                        "env": [
                           {
                              "name": "DB_PROVIDER",
                              "value": "postgres"
                           },
                           {
                              "name": "PUBLIC_APP_URL",
                              "value": "https://id.mhnet.app"
                           },
                           {
                              "name": "TRUST_PROXY",
                              "value": "true"
                           },
                           {
                              "name": "UPDATE_CHECK_DISABLED",
                              "value": "true"
                           }
                        ],
                        "envFrom": [
                           {
                              "secretRef": {
                                 "name": "pocketid-env"
                              }
                           }
                        ],
                        "image": "ghcr.io/pocket-id/pocket-id:v0.49.0",
                        "livenessProbe": {
                           "tcpSocket": {
                              "port": 80
                           }
                        },
                        "name": "pocketid",
                        "ports": [
                           {
                              "containerPort": 80,
                              "name": "http"
                           }
                        ],
                        "readinessProbe": {
                           "httpGet": {
                              "path": "/health",
                              "port": 80
                           }
                        },
                        "securityContext": {
                           "allowPrivilegeEscalation": false,
                           "capabilities": {
                              "drop": [
                                 "ALL"
                              ]
                           }
                        },
                        "startupProbe": {
                           "failureThreshold": 30,
                           "httpGet": {
                              "path": "/health",
                              "port": 80
                           }
                        },
                        "volumeMounts": [
                           {
                              "mountPath": "/app/backend/data",
                              "name": "data"
                           }
                        ]
                     }
                  ],
                  "enableServiceLinks": false,
                  "initContainers": [ ],
                  "securityContext": {
                     "runAsGroup": 345708,
                     "runAsNonRoot": true,
                     "runAsUser": 345708,
                     "seccompProfile": {
                        "type": "RuntimeDefault"
                     }
                  },
                  "volumes": [
                     {
                        "name": "data",
                        "persistentVolumeClaim": {
                           "claimName": "data"
                        }
                     }
                  ]
               }
            },
            "volumeClaimTemplates": [
               {
                  "apiVersion": "v1",
                  "kind": "PersistentVolumeClaim",
                  "metadata": {
                     "name": "data"
                  },
                  "spec": {
                     "accessModes": [
                        "ReadWriteOnce"
                     ],
                     "resources": {
                        "requests": {
                           "storage": "1Gi"
                        }
                     }
                  }
               }
            ]
         }
      }
   ],
   "kind": "List"
}
